@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Project Name</title>

    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.0/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/redui-1.0.0.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/redui-1.0.0.default.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/darwin.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="redui_application" data-templatesbaseurl="@Url.Content("~/Content/templates/")" data-model="@Url.Content("~/Scripts/darwin-model.js")" >
        <div id="header">
            <div id="header_inner">
                Header
            </div>
        </div>

        <div id="ribbon">
            <div id="ribbon_inner">
                Ribbon
            </div>
        </div>

        <div id="breadcrumbs">
            <div id="breadcrumbs_inner">
                Breadcrumbs
            </div>
        </div>

        <div id="client_area">
            <div id="client_area_inner">

                <div id="project_area">
                    <div id="project_area_inner">

                        <div id="project_tree">
                            <div id="project_tree_inner"></div>
                        </div>

                        <div id="details_view">
                            <div id="details_view_inner"></div>
                        </div>

                        <div class="vertical_splitter"></div>

                    </div>
                </div>

                <div id="info_panel">
                    <div id="info_panel_inner">
                        Info panel
                    </div>
                </div>

                <div class="horizontal_splitter"></div>

            </div>
        </div>

        <div id="footer">
            <div id="footer_inner">
                Footer
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/mustache.js")" type="text/javascript"></script>
    
    <!-- RedUI framework -->
    <script src="@Url.Content("~/Scripts/redui-1.0.0.js")" type="text/javascript"></script>

    <!-- Demo app code -->
    <script src="@Url.Content("~/Scripts/darwin-layout.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/darwin.js")" type="text/javascript"></script>
</body>
</html>
